---
import Image from "astro/components/Image.astro";

const { titulo, descripcion, href, proyecto} = Astro.props
---

<div class="max-w-content-size mx-auto w-full">
  <section class="mt-6 w-full">
    <ul class="space-y-8">
      <li class="border-extra-soft-white text-soft-white hover:bg-soft-light rounded-xl border transition-colors duration-200">
        <div>
          <article>
            <a href={href}>
              <Image loading="lazy" decoding="async" src={proyecto} alt="image preview" width="1020" height="520" class="aspect-[16/5] rounded-t-xl object-cover" />
              <div class="w-full">
                <div class="flex flex-col px-4 py-4">
                  <h4 class="text-2xl font-bold">{titulo}</h4>
                  <div class="flex gap-2">
                    <span class="text-sm mt-4 self-start rounded py-1 text-zinc-400">{descripcion}</span>
                  </div>
                  <div class="flex flex-rows gap-2">
                    <slot />
                  </div>
                </div>
              </div>
            </a>
          </article>
        </div>
      </li>
    </ul>
  </section>
</div>